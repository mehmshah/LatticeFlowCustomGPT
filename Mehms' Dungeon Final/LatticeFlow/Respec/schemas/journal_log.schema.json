{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Journal Log",
  "type": "object",
  "required": [
    "date",
    "intentions",
    "gratitude"
  ],
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^\\\\d{4}-\\\\d{2}-\\\\d{2}$"
    },
    "mood": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10
    },
    "energy": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10
    },
    "recovery": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10
    },
    "intentions": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string"
        },
        "people": {
          "type": "string"
        },
        "actions": {
          "type": "string"
        }
      }
    },
    "gratitude": {
      "type": "object",
      "properties": {
        "anchor": {
          "type": "string"
        },
        "moment": {
          "type": "string"
        },
        "why": {
          "type": "string"
        }
      }
    },
    "fsm": {
      "type": "object"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}